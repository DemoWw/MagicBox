<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_me_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="?attr/colorPrimary"
        />

    <ImageView
        android:id="@+id/iv_me_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tv_me_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?android:textColorPrimary"
        android:textSize="18sp"
        android:text="@string/welcome_to_magic_box"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="28dp"
        />

    <TextView
        android:id="@+id/tv_me_register"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="@string/register_fast"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="13sp"
        android:layout_below="@+id/tv_me_welcome"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="15dp"
        />

    <ImageView
        android:id="@+id/iv_me_arrow"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:src="@drawable/icon_me_arrow"
        android:layout_alignTop="@+id/tv_me_register"
        android:layout_alignBottom="@+id/tv_me_register"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="27dp"
        android:scaleType="fitCenter"
        android:paddingTop="4dp"
        android:paddingBottom="3dp"
        />

    <Button
        android:id="@+id/btn_me_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="25dp"
        android:textSize="15sp"
        android:text="@string/login_now"
        android:textColor="?attr/colorAccent"
        android:theme="@style/button_ripple_theme"
        android:layout_below="@+id/tv_me_register"
        android:layout_alignEnd="@+id/iv_me_arrow" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_me_avatar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:visibility="gone"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/card_me_summary"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/card_margin_left_right"
        android:layout_marginRight="@dimen/card_margin_left_right"
        android:layout_marginTop="180dp"
        app:cardElevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/card_corners_radius"
        app:cardBackgroundColor="@color/pureWhite"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:id="@+id/ll_me_comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/icon_me_comment"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="评论"
                    android:textColor="@color/core_text"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_me_post"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/icon_me_post"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="帖子"
                    android:textColor="@color/core_text"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_me_collect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/icon_me_collect"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="收藏"
                    android:textColor="@color/core_text"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_me_calender"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/icon_me_calendar"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="日历"
                    android:textColor="@color/core_text"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_me_summary"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipToPadding="false"
            >
            <android.support.v7.widget.CardView
                android:id="@+id/card_me_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_margin_left_right"
                android:layout_marginRight="@dimen/card_margin_left_right"
                app:cardElevation="@dimen/card_elevation"
                app:cardCornerRadius="@dimen/card_corners_radius"
                app:cardBackgroundColor="@color/pureWhite"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:id="@+id/rl_me_chameleon"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        >
                        <ImageView
                            android:id="@+id/iv_me_chameleon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="18dp"
                            android:src="@drawable/me_icon_chameleon"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="变色龙"
                            android:layout_toEndOf="@+id/iv_me_chameleon"
                            android:layout_marginStart="18dp"
                            />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_divider_height"
                        android:background="@color/core_line"
                        android:layout_marginStart="56dp"
                        />
                    <RelativeLayout
                        android:id="@+id/rl_me_offline"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        >
                        <ImageView
                            android:id="@+id/iv_me_offline"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="18dp"
                            android:src="@drawable/me_icon_offline"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="离线阅读"
                            android:layout_toEndOf="@+id/iv_me_offline"
                            android:layout_marginStart="18dp"
                            />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_divider_height"
                        android:background="@color/core_line"
                        android:layout_marginStart="56dp"
                        />
                    <RelativeLayout
                        android:id="@+id/rl_me_setting"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        >
                        <ImageView
                            android:id="@+id/iv_me_setting"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="18dp"
                            android:src="@drawable/me_icon_settings"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="设置"
                            android:layout_toEndOf="@+id/iv_me_setting"
                            android:layout_marginStart="18dp"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_me_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/card_margin_left_right"
                android:layout_marginRight="@dimen/card_margin_left_right"
                app:cardElevation="@dimen/card_elevation"
                app:cardCornerRadius="@dimen/card_corners_radius"
                app:cardBackgroundColor="@color/pureWhite"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:id="@+id/rl_me_business"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        >
                        <ImageView
                            android:id="@+id/iv_me_business"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="18dp"
                            android:src="@drawable/me_icon_business"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="联系作者"
                            android:layout_toEndOf="@+id/iv_me_business"
                            android:layout_marginStart="18dp"
                            />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_divider_height"
                        android:background="@color/core_line"
                        android:layout_marginStart="56dp"
                        />
                    <RelativeLayout
                        android:id="@+id/rl_me_about"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        >
                        <ImageView
                            android:id="@+id/iv_me_about"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="18dp"
                            android:src="@drawable/me_icon_about"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="关于"
                            android:layout_toEndOf="@+id/iv_me_about"
                            android:layout_marginStart="18dp"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>