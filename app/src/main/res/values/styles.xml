<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blueGreyColorPrimary</item>
        <item name="colorPrimaryDark">@color/blueGreyColorPrimaryDark</item>
        <item name="colorAccent">@color/blueGreyColorAccent</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--<item name="android:navigationBarColor">@android:color/transparent</item>-->
        <!--<item name="android:windowBackground">@color/transparent</item>-->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:colorControlHighlight">?attr/colorControlHighlight</item>
    </style>

    <!-- 用于修改TabLayout默认的字体大小写显示 -->
    <style name="TabLayoutText" parent="TextAppearance.AppCompat">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="button_ripple_theme" parent="@style/ThemeOverlay.AppCompat">

        <!-- 此颜色值为it之家客户端使用的按钮点击涟漪颜色 -->
        <!--<item name="colorControlHighlight">#90cfd8dc</item>-->

        <!-- 此属性必须加前缀"android:",否则系统无法识别，导致该属性无效 -->
        <item name="android:colorControlHighlight">?attr/colorControlHighlight</item>

        <item name="android:colorButtonNormal">@color/pureWhite</item>
    </style>

    <!-- 此主题借鉴it之家，作用是处理button背景及点击效果，目前没有使用 -->
    <style name="button_ripple_style" parent="@style/Base.Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.Button.Colored</item>
        <item name="android:background">@drawable/md_btn_background</item>
    </style>

</resources>
